<Window x:Class="Quan_Ly_Ban_Ve_May_Bay.View.AddInforHK"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Quan_Ly_Ban_Ve_May_Bay.View"
        mc:Ignorable="d"
        xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes" xmlns:uc="clr-namespace:Quan_Ly_Ban_Ve_May_Bay.UserControls"
        WindowStyle="None"
        Title="AddInforHK" Height="650" Width="1000">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="25"/>
            <RowDefinition Height="150"/>
            <RowDefinition Height="230"/>
            <RowDefinition Height="120"/>
            <RowDefinition Height="100"/>
        </Grid.RowDefinitions>

        <Button Style ="{StaticResource MaterialDesignIconButton}"
                Height="25" Width="25" 
                ToolTip="Close"
                HorizontalAlignment="Right"
                Grid.Row="0" Click="btnClose_Click" >
            <materialDesign:PackIcon Kind="Close" Foreground="Black"/>
        </Button>
        <Grid Grid.Row="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="500"/>
                <ColumnDefinition/>
            </Grid.ColumnDefinitions>
            <StackPanel>
                <TextBlock Text="Thông tin hóa đơn" Margin="30,0,0,0" FontSize="20"/>
                <TextBlock Text="Mã hóa đơn: " Margin="60,5,0,0"/>
                <TextBox x:Name="maHoaDonTxt" HorizontalAlignment="Stretch" Margin="180,0,0,0" TextDecorations="{x:Null}" Visibility="Visible" UndoLimit="99" IsEnabled="False" SelectionBrush="{x:Null}" BorderBrush="{x:Null}"/>
                <TextBlock Text="Ngày lập: " Margin="60,0,0,0"/>
                <TextBox x:Name="ngaylapHDTxt" HorizontalAlignment="Stretch" Margin="180,0,0,0" TextDecorations="{x:Null}" Visibility="Visible" UndoLimit="99" IsEnabled="False" SelectionBrush="{x:Null}" BorderBrush="{x:Null}"/>
                <TextBlock Text="Mã tài khoản thanh toán: " Margin="60,0,0,0"/>
                <TextBox x:Name="maTKTTTxt" HorizontalAlignment="Stretch" Margin="180,0,0,0" TextDecorations="{x:Null}" Visibility="Visible" UndoLimit="99" IsEnabled="False" SelectionBrush="{x:Null}" BorderBrush="{x:Null}"/>

            </StackPanel>
            <StackPanel Grid.Column="1">
                <TextBlock Text="Thông tin chuyến bay" Margin="30,0,0,0" FontSize="20"/>
                <TextBlock Text="Mã chuyến bay: " Margin="60,5,0,0"/>
                <TextBox x:Name="maChuyenBayTxt"  Text="N'QH001'" HorizontalAlignment="Stretch" Margin="180,0,0,0" TextDecorations="{x:Null}" Visibility="Visible" UndoLimit="99" IsEnabled="False" SelectionBrush="{x:Null}" BorderBrush="{x:Null}"/>
                <Grid >
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="270"/>
                        <ColumnDefinition/>
                    </Grid.ColumnDefinitions>
                    <Grid>
                        <StackPanel>
                            <TextBlock Text="Xuất phát từ: " Margin="60,0,0,0"/>
                            <TextBox x:Name="tuTxt"  HorizontalAlignment="Stretch" Margin="180,0,0,0" TextDecorations="{x:Null}" Visibility="Visible" UndoLimit="99" IsEnabled="False" SelectionBrush="{x:Null}" BorderBrush="{x:Null}"/>
                        </StackPanel>
                    </Grid>
                    <Grid Grid.Column="1">
                        <StackPanel>
                            <TextBlock Text="Đến: " Margin="20,0,0,0"/>
                            <TextBox x:Name="denTxt" HorizontalAlignment="Stretch" Margin="70,0,0,0" TextDecorations="{x:Null}" Visibility="Visible" UndoLimit="99" IsEnabled="False" SelectionBrush="{x:Null}" BorderBrush="{x:Null}"/>
                        </StackPanel>
                    </Grid>
                </Grid>
                <TextBlock Text="Ngày giờ: " Margin="60,0,0,0"/>
                <TextBox x:Name="ngayGiotxt" HorizontalAlignment="Stretch" Margin="180,0,0,0" TextDecorations="{x:Null}" Visibility="Visible" UndoLimit="99" IsEnabled="False" SelectionBrush="{x:Null}" BorderBrush="{x:Null}"/>
            </StackPanel>

        </Grid>
        <Grid Grid.Row="2">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="201.538"/>
                <ColumnDefinition Width="298.462"/>
                <ColumnDefinition/>
            </Grid.ColumnDefinitions>
            <StackPanel Grid.ColumnSpan="2">
                <TextBlock Text="Thông tin hành khách" Margin="30,0,0,0" FontSize="20"/>
                <TextBlock Text="Mã hành khách: " Margin="60,5,0,0"/>
                <TextBox x:Name="maHanhKhachText"  HorizontalAlignment="Stretch" Margin="180,0,0,0" TextDecorations="{x:Null}" Visibility="Visible" UndoLimit="99" IsEnabled="False" SelectionBrush="{x:Null}" BorderBrush="{x:Null}"/>
                <TextBlock Text="Tên hành khách: " Margin="60,5,0,0"/>
                <TextBox Width="300" Height="30" BorderBrush="Black" BorderThickness="1" x:Name="tenHanhKhachTxt" HorizontalAlignment="Left" Margin="180,0,0,0" PreviewTextInput="tenHanhKhachTxt_PreviewTextInput"/>
                <TextBlock Text="CMND/CCCD: " Margin="60,5,0,0"/>
                <TextBox Width="300" Height="30" BorderBrush="Black" BorderThickness="1" x:Name="cmndTxt" HorizontalAlignment="Left" Margin="180,0,0,0" PreviewTextInput="cmndTxt_PreviewTextInput"/>
                <TextBlock Text="Số điện thoại: " Margin="60,5,0,0"/>
                <TextBox Width="300" Height="30" BorderBrush="Black" BorderThickness="1" x:Name="sdtTxt" HorizontalAlignment="Left" Margin="180,0,0,0" PreviewTextInput="sdtTxt_PreviewTextInput"/>
            </StackPanel>
            <StackPanel Grid.Column="2">
                <TextBlock Text="Thông tin vé" Margin="30,0,0,0" FontSize="20"/>
                <TextBlock Text="Mã vé: " Margin="60,5,0,0"/>
                <ComboBox Width="250" FontSize="18" 
                      BorderBrush="Black" BorderThickness="1"
                      Background="#F5F5F5"
                      x:Name="maVeBox" HorizontalAlignment="Left" Margin="180,0,0,0" SelectionChanged="maVeBox_SelectionChanged"/>
                <TextBlock Text="Số ghế: " Margin="60,5,0,0"/>
                <TextBox x:Name="soGheTxt" HorizontalAlignment="Stretch" Margin="180,0,0,0" TextDecorations="{x:Null}" Visibility="Visible" UndoLimit="99" IsEnabled="False" SelectionBrush="{x:Null}" BorderBrush="{x:Null}"/>
                <TextBlock Text="Mã hạng vé: " Margin="60,0,0,0"/>
                <TextBox x:Name="maHangVeTxt" HorizontalAlignment="Stretch" Margin="180,0,0,0" TextDecorations="{x:Null}" Visibility="Visible" UndoLimit="99" IsEnabled="False" SelectionBrush="{x:Null}" BorderBrush="{x:Null}"/>
                <Button x:Name="btnXacNhanVe"  Height="30" Width="150" Content="Xác nhận vé" Foreground="Black" FontSize="14" Background="#2E8B57" Margin="0,10,0,0" Click="btnXacNhanVe_Click"/>

            </StackPanel>


        </Grid>

        <ListView x:Name="veLV" Grid.Row="3" d:ItemsSource="{d:SampleData ItemCount=5}" Margin="10,0,10,0" SelectionChanged="veLV_SelectionChanged">
            <ListView.View>
                <GridView>
                    <GridViewColumn Header="Mã vé" Width="100" DisplayMemberBinding="{Binding TiketID}"/>
                    <GridViewColumn Header="Số ghế" Width="110" DisplayMemberBinding="{Binding SeatNumber}"/>
                    <GridViewColumn Header="Mã hạng vé" Width="140" DisplayMemberBinding="{Binding FlightClass}"/>
                    <GridViewColumn Header="Mã hành khách" Width="150" DisplayMemberBinding="{Binding HkID}"/>
                    <GridViewColumn Header="Tên hành khách" Width="180" DisplayMemberBinding="{Binding HkName}"/>
                    <GridViewColumn Header="CMND/CCCD" Width="145" DisplayMemberBinding="{Binding CMND}"/>
                    <GridViewColumn Header="SĐT" Width="100" DisplayMemberBinding="{Binding PhoneNumber}"/>
                </GridView>
            </ListView.View>
        </ListView>

        <Grid Grid.Row="4">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="417*"/>
                <ColumnDefinition Width="583*"/>
            </Grid.ColumnDefinitions>
            <StackPanel Grid.ColumnSpan="2">
                <TextBlock Text="Thành tiền: " Margin="60,15,0,0"/>
                <TextBox x:Name="tienTxt"  Text="0" HorizontalAlignment="Stretch" Margin="180,0,0,0" TextDecorations="{x:Null}" Visibility="Visible" UndoLimit="99" IsEnabled="False" SelectionBrush="{x:Null}" BorderBrush="{x:Null}"/>
                <Grid Height="40">
                    <Button x:Name="btnTTSau"  Height="30" Width="150" Content="Thanh toán sau" Foreground="Black" FontSize="14" Background="#2E8B57"  Margin="800,5,50,0" Click="btnTTSau_Click"/>
                    <Button x:Name="btnTTNgay"  Height="30" Width="150" Content="Thanh toán ngay" Foreground="Black" FontSize="14" Background="#2E8B57"  Margin="580,5,270,0" Click="btnTTNgay_Click"/>
                </Grid>

            </StackPanel>

        </Grid>

    </Grid>
</Window>