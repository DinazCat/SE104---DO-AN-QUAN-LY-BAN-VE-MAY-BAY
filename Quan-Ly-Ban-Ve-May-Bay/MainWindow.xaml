<Window x:Class="Quan_Ly_Ban_Ve_May_Bay.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        
        xmlns:local="clr-namespace:Quan_Ly_Ban_Ve_May_Bay"
        mc:Ignorable="d"
        Height="660" Width="1100" Background="Transparent" WindowStartupLocation="CenterScreen">
    <Grid>
        <Border CornerRadius ="50" BorderThickness="0">
            <Border.Background>
                <ImageBrush ImageSource="/Images/bg.png" />

            </Border.Background>
            <TabControl Width="1100" Height="620">
                <TabItem Header="Home" Width="120" HorizontalAlignment="Right">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="174*"/>
                            <ColumnDefinition Width="101*"/>
                        </Grid.ColumnDefinitions>
                        <!--Search Flight-->
                        <Grid Margin="0,311,0,61" Height="200" Grid.ColumnSpan="2">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="50"/>
                                <ColumnDefinition Width="250"/>
                                <ColumnDefinition Width="250"/>
                                <ColumnDefinition Width="250"/>
                                <ColumnDefinition Width="250"/>
                                <ColumnDefinition Width="50"/>
                            </Grid.ColumnDefinitions>

                            <!--From-->
                            <Border CornerRadius ="25" Grid.Column="1" Height="170" Width="230" Margin="-20 0 0 0">
                                <Border.Background>
                                    <LinearGradientBrush>
                                        <GradientStop Color="#bfe063" Offset="0.7"/>
                                        <GradientStop Color="#a6d71b" Offset="0"/>
                                    </LinearGradientBrush>
                                </Border.Background>
                                <StackPanel>

                                    <TextBlock Margin="0 35 0 0" Height="50" Width="150" Text="From" Foreground="White" FontSize="30"/>
                                    <ComboBox
                                materialDesign:HintAssist.Hint="City." 
                                Width="200" FontSize="24" VerticalAlignment="Center" Foreground="#3f7e32"
                                Style="{StaticResource MaterialDesignFloatingHintComboBox}">
                                        <ComboBoxItem
                                    IsSelected="True">
                                            Hanoi
                                        </ComboBoxItem>
                                        <ComboBoxItem>
                                            Hue
                                        </ComboBoxItem>
                                        <ComboBoxItem>
                                            HoChiMinh
                                        </ComboBoxItem>
                                        <ComboBoxItem>
                                            CamRanh
                                        </ComboBoxItem>
                                    </ComboBox>
                                </StackPanel>
                            </Border>

                            <!--To-->
                            <Border CornerRadius ="25" Grid.Column="2" Height="170" Margin="-20 0 0 0" Width="230">
                                <Border.Background>
                                    <LinearGradientBrush>
                                        <GradientStop Color="#bfe063" Offset="0.7"/>
                                        <GradientStop Color="#a6d71b" Offset="0"/>
                                    </LinearGradientBrush>
                                </Border.Background>
                                <StackPanel>
                                    <TextBlock Margin="0 35 0 0" Height="50" Width="150" Text="To" Foreground="White" FontSize="30"/>
                                    <ComboBox
                                materialDesign:HintAssist.Hint="City." 
                                Width="200" FontSize="24" VerticalAlignment="Center" Foreground="#3f7e32"
                                Style="{StaticResource MaterialDesignFloatingHintComboBox}">
                                        <ComboBoxItem
                                    IsSelected="True">
                                            Hanoi
                                        </ComboBoxItem>
                                        <ComboBoxItem>
                                            Hue
                                        </ComboBoxItem>
                                        <ComboBoxItem>
                                            HoChiMinh
                                        </ComboBoxItem>
                                        <ComboBoxItem>
                                            CamRanh
                                        </ComboBoxItem>
                                    </ComboBox>
                                </StackPanel>
                            </Border>
                            <!--Date-->
                            <Border CornerRadius ="25" Grid.Column="3" Height="170" Margin="-20 0 0 0" Width="230">
                                <Border.Background>
                                    <LinearGradientBrush>
                                        <GradientStop Color="#bfe063" Offset="0.7"/>
                                        <GradientStop Color="#a6d71b" Offset="0"/>
                                    </LinearGradientBrush>
                                </Border.Background>
                                <StackPanel>

                                    <TextBlock Margin="0 35 0 0" Height="50" Width="150" Text="Date" 
                                               Foreground="White" FontSize="30"/>
                                    <DatePicker Width="200" Margin="0 14 0 0"
                                        materialDesign:HintAssist.Hint="Pick Date" Foreground="#3f7e32"
                                        FontSize="18" VerticalAlignment="Center" 
                                        Style="{StaticResource MaterialDesignFloatingHintDatePicker}" />
                                </StackPanel>
                                
                                
                            </Border>
                            <!--Adults-->
                            <Border CornerRadius ="25" Grid.Column="4" Height="170" Margin="-20 0 0 0" Width="230">
                                <Border.Background>
                                    <LinearGradientBrush>
                                        <GradientStop Color="#bfe063" Offset="0.7"/>
                                        <GradientStop Color="#a6d71b" Offset="0"/>
                                    </LinearGradientBrush>
                                </Border.Background>
                                <StackPanel>
                                    <TextBlock Margin="0 30 0 0" Height="50" Width="150" Text="Adults" Foreground="White" FontSize="30"/>
                                    <ComboBox
                                materialDesign:HintAssist.Hint="Person." Margin="0 5 0 0"
                                Width="200" FontSize="24" VerticalAlignment="Center" Foreground="#3f7e32"
                                Style="{StaticResource MaterialDesignFloatingHintComboBox}">
                                        <ComboBoxItem
                                    IsSelected="True">
                                            1
                                        </ComboBoxItem>
                                        <ComboBoxItem>
                                            2
                                        </ComboBoxItem>
                                        <ComboBoxItem>
                                            3
                                        </ComboBoxItem>
                                        <ComboBoxItem>
                                            4
                                        </ComboBoxItem>
                                    </ComboBox>
                                </StackPanel>
                            </Border>
                        </Grid>
                        <!--Button Search-->
                        <Border CornerRadius ="25"  Height="50" Margin="450,506,46,16" Width="200">
                            <Border.Background>
                                <LinearGradientBrush>
                                    <GradientStop Color="#bfe063" Offset="0.7"/>
                                    <GradientStop Color="#a6d71b" Offset="0"/>
                                </LinearGradientBrush>
                            </Border.Background>

                            <Button
                     Width="200" Height="50" Background="Transparent" BorderBrush="Transparent"
                     Content="Search" Foreground="White" FontSize="30" Click="btnSearch_Click" >
                            </Button>
                        </Border>
                    </Grid>
                </TabItem>
                <TabItem Foreground="#3f7e32" Header="All Flight" Margin="50 0 0 0" Width="120">
                    
                </TabItem>

                <TabItem Header="My Bookings" Margin="-50 0 0 0" Width="120">

                </TabItem>

                <TabItem Header="Login" Width="120" HorizontalAlignment="Left">

                </TabItem>
            </TabControl>
        </Border>
    </Grid>
</Window>
