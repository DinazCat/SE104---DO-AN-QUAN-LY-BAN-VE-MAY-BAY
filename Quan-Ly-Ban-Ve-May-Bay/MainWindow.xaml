<Window x:Class="Quan_Ly_Ban_Ve_May_Bay.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        
        xmlns:local="clr-namespace:Quan_Ly_Ban_Ve_May_Bay"
        mc:Ignorable="d"
        Title="MainWindow" Height="640" Width="1100" Background="Transparent">
    <Grid>
        <Border CornerRadius ="50" BorderThickness="0">
            <Border.Background>
                <ImageBrush ImageSource="/Images/bg.png" />

            </Border.Background>
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="70"/>
                    <RowDefinition/>
                </Grid.RowDefinitions>
                <Grid Grid.Row="0">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="450"/>
                        <ColumnDefinition Width="200"/>
                        <ColumnDefinition Width="230"/>
                        <ColumnDefinition Width="200"/>
                    </Grid.ColumnDefinitions>
                    <Button x:Name="btnAllFlight" Height="50" Width="100" Background="Transparent" Content="All Flight" 
                            HorizontalAlignment="Center"
                            VerticalAlignment="Center" BorderThickness="0" Foreground="ForestGreen" 
                        FontSize="20" Cursor="Hand" Grid.Column="1" >
                        <Button.Style>
                            <Style TargetType="Button">
                                <Style.Triggers>
                                    <Trigger Property="IsMouseOver" Value="True">
                                        <Setter Property="Background" Value="#d1e2b4" />
                                    </Trigger>
                                </Style.Triggers>
                            </Style>
                        </Button.Style>
                        <Button.Template>
                            <ControlTemplate TargetType="Button">
                                <Border Width="100" Height="50"
                                        CornerRadius="25">
                                    <ContentPresenter VerticalAlignment="Center"
                                                      HorizontalAlignment="Center"/>
                                </Border>
                            </ControlTemplate>
                        </Button.Template>
                    </Button>

                    <Button Name="btnLogIn" Grid.Column="3" BorderBrush="Transparent" Background="Transparent" Height="50" Width="200" Margin="15 10 10 0" >
                        <StackPanel Orientation="Horizontal" Height="50" Width="200" Margin="0 0 0 0">
                            <materialDesign:PackIcon Kind="AccountCircle" Height="41" Width="53" Foreground="ForestGreen" VerticalAlignment="Stretch"/>
                            <TextBlock Text="Log In" Height="50" Width="150" FontSize="24" FontWeight="Medium" Margin="0 5 0 0" Foreground="ForestGreen"/>
                        </StackPanel>
                    </Button>

                </Grid>

                <!--Search Flight-->
                <Grid Grid.Row="1" Margin="0,210,0,0" Height="200">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="50"/>
                        <ColumnDefinition Width="250"/>
                        <ColumnDefinition Width="250"/>
                        <ColumnDefinition Width="250"/>
                        <ColumnDefinition Width="250"/>
                        <ColumnDefinition Width="50"/>
                    </Grid.ColumnDefinitions>

                    <!--From-->
                    <Border CornerRadius ="25" Grid.Column="1" Height="170" Width="230" Margin="-20 0 0 0">
                        <Border.Background>
                            <LinearGradientBrush>
                                <GradientStop Color="#bfe063" Offset="0.7"/>
                                <GradientStop Color="#a6d71b" Offset="0"/>
                            </LinearGradientBrush>
                        </Border.Background>
                        <StackPanel>

                            <TextBlock Margin="0 35 0 0" Height="50" Width="150" Text="From" Foreground="White" FontSize="30"/>
                            <ComboBox
                                materialDesign:HintAssist.Hint="City." 
                                Width="200" FontSize="24" VerticalAlignment="Center" Foreground="ForestGreen"
                                Style="{StaticResource MaterialDesignFloatingHintComboBox}">
                                <ComboBoxItem
                                    IsSelected="True">
                                    Hanoi
                                </ComboBoxItem>
                                <ComboBoxItem>
                                    Hue
                                </ComboBoxItem>
                                <ComboBoxItem>
                                    HoChiMinh
                                </ComboBoxItem>
                                <ComboBoxItem>
                                    CamRanh
                                </ComboBoxItem>
                            </ComboBox>
                        </StackPanel>
                    </Border>

                    <!--To-->
                    <Border CornerRadius ="25" Grid.Column="2" Height="170" Margin="-20 0 0 0" Width="230">
                        <Border.Background>
                            <LinearGradientBrush>
                                <GradientStop Color="#bfe063" Offset="0.7"/>
                                <GradientStop Color="#a6d71b" Offset="0"/>
                            </LinearGradientBrush>
                        </Border.Background>
                        <StackPanel>
                            <TextBlock Margin="0 35 0 0" Height="50" Width="150" Text="To" Foreground="White" FontSize="30"/>
                            <ComboBox
                                materialDesign:HintAssist.Hint="City." 
                                Width="200" FontSize="24" VerticalAlignment="Center" Foreground="ForestGreen"
                                Style="{StaticResource MaterialDesignFloatingHintComboBox}">
                                <ComboBoxItem
                                    IsSelected="True">
                                    Hanoi
                                </ComboBoxItem>
                                <ComboBoxItem>
                                    Hue
                                </ComboBoxItem>
                                <ComboBoxItem>
                                    HoChiMinh
                                </ComboBoxItem>
                                <ComboBoxItem>
                                    CamRanh
                                </ComboBoxItem>
                            </ComboBox>
                        </StackPanel>
                    </Border>
                    <!--Date-->
                    <Border CornerRadius ="25" Grid.Column="3" Height="170" Margin="-20 0 0 0" Width="230">
                        <Border.Background>
                            <LinearGradientBrush>
                                <GradientStop Color="#bfe063" Offset="0.7"/>
                                <GradientStop Color="#a6d71b" Offset="0"/>
                            </LinearGradientBrush>
                        </Border.Background>
                        <StackPanel>

                            <TextBlock Margin="0 35 0 0" Height="50" Width="150" Text="Date" Foreground="White" FontSize="30"/>
                            <DatePicker
                                Width="200" Height="50" FontSize="24"
                                Margin="0 9 0 0" 
                                Style="{StaticResource MaterialDesignFloatingHintDatePicker}" />
                        </StackPanel>
                    </Border>
                    <!--Adults-->
                    <Border CornerRadius ="25" Grid.Column="4" Height="170" Margin="-20 0 0 0" Width="230">
                        <Border.Background>
                            <LinearGradientBrush>
                                <GradientStop Color="#bfe063" Offset="0.7"/>
                                <GradientStop Color="#a6d71b" Offset="0"/>
                            </LinearGradientBrush>
                        </Border.Background>
                        <StackPanel>
                            <TextBlock Margin="0 30 0 0" Height="50" Width="150" Text="Adults" Foreground="White" FontSize="30"/>
                            <ComboBox
                                materialDesign:HintAssist.Hint="Person." 
                                Width="200" FontSize="24" VerticalAlignment="Center" Foreground="ForestGreen"
                                Style="{StaticResource MaterialDesignFloatingHintComboBox}">
                                <ComboBoxItem
                                    IsSelected="True">
                                    1
                                </ComboBoxItem>
                                <ComboBoxItem>
                                    2
                                </ComboBoxItem>
                                <ComboBoxItem>
                                    3
                                </ComboBoxItem>
                                <ComboBoxItem>
                                    4
                                </ComboBoxItem>
                            </ComboBox>
                        </StackPanel>
                    </Border>
                </Grid>
                <!--Button Search-->
                <Border CornerRadius ="25" Grid.Row="2"  Height="50" Margin="0 460 0 0" Width="200">
                    <Border.Background>
                        <LinearGradientBrush>
                            <GradientStop Color="#bfe063" Offset="0.7"/>
                            <GradientStop Color="#a6d71b" Offset="0"/>
                        </LinearGradientBrush>
                    </Border.Background>

                    <Button
                     Width="200" Height="50" Background="Transparent" BorderBrush="Transparent"
                     Content="Search" Foreground="White" FontSize="30">
                    </Button>
                </Border>
            </Grid>
        </Border>
    </Grid>
</Window>
